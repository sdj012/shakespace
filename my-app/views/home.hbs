<!doctype html>
<html>


<style>

html{
  height:100%;
}

body{ 
  scroll-behavior: unset;
  height:100%;
}

.playlist {
  position:absolute;
  z-index: 2;
  width:100%;
  height:100%;
  margin-top: 130%;
  margin-bottom:50%;
  left:50%;
  margin-right:-50%;
  transform:translate(-50%,-50%);
}

.menu{
  position:fixed;
  height:18%;
  width:100%;
  top:0;
  background-color:black;
  z-index: 4;
}

  @media only screen (min-width: 501px) and (max-width: 800px) {

      .playlist {
        position:absolute;
        z-index: 2;
        width:100%;
        height:100%;
        margin-top: 100%;
        margin-bottom:50%;
        left:50%;
        margin-right:-50%;
        transform:translate(-50%,-50%);
      }

  }

  @media only screen and (min-width: 801px) and (max-width: 1300px) {

      .playlist {
        position:absolute;
        z-index: 2;
        width:100%;
        height:100%;
        margin-top: 75%;
        margin-bottom:50%;
        left:50%;
        margin-right:-50%;
        transform:translate(-50%,-50%);
      }

  }

  @media only screen and (min-width: 1301px){

      .playlist {
        position:absolute;
        z-index: 2;
        width:100%;
        height:100%;
        margin-top: 45%;
        margin-bottom:50%;
        left:50%;
        margin-right:-50%;
        transform:translate(-50%,-50%);
      }

  }

.logoutLink{
  position: fixed;
  top:10px;
  right:20px;
  z-index: 1;
  color:white;
}

.logoutLink:hover{
  color:white;
  font-weight:bolder;
}

.content {
  z-index: 3;
  position: fixed;
  top:10px;
  left:20px;
  display:inline-block;
  font-size:larger;
  color: white;
}

.addInputBox{
  position:fixed;
  z-index: 5;
  top:5%;
  left:20px;
  max-width:200px;
  max-height:10px;
  font-family:'Helvetica Neue';
  background-color:grey;
  transition: all 1s ease-in;
}

.addButton{
  position:fixed;
  top:4.5%;
  left:240px;
  min-width:1.5%;
  min-height:3%;
  border:none;
  -webkit-border:none;
  -moz-border:none;
  background-color: black;
}

.removeBoxes{
  position:fixed;
  top:4.5%;
  left:285px;
  min-width:1.5%;
  min-height:3%;
  border:none;
  -webkit-border:none;
  -moz-border:none;
  opacity: 1;
  transition: all 0.5s ease-in;
}


.addVideo{ /* + - */
  background-color:black;
  color:white;
  font-family:Geneva;
  font-size:xx-large;
  opacity: 0.9; 
}

.removeButton{
  z-index: 5;
  position:fixed;
  top:12%;
  left:350px;
  border-radius:5px;
  border-style:unset;
  color:white;
  background-color: black;
  opacity: 0;
  transition: all 0.5s ease-in;
}

.deletionIndicator{
  opacity: 0;
  transition: all 0.5s ease-in;
  margin-left:-1.5%;
  z-index: 5;
}

.video{
  width:60%;
  height:60%;
  margin-left:auto;
  margin-right:auto;
  margin-bottom:25%;
}

iframe{
  position:relative;
  width:100%;
  height:100%;
  margin-left:auto;
  margin-right:auto;
  z-index: 5;
}

.embed-responsive {
  width:100%;
  height:100%;
  margin-left:auto;
  margin-right:auto;
}

.sizing{
  position:fixed;
  bottom:2%;
  z-index: 3;
  color:white;
  background-color: black;
}

.s{
  left:25px;
  position:fixed;
  z-index: 5;
  border:none;
  -moz-border:none;
  -webkit-border:none;
  }

.m{
  left:50px;
  position:fixed;
  z-index: 5;
  border:none;
  -moz-border:none;
  -webkit-border:none;
  }

.l{
  left:80px;
  position:fixed;
  z-index: 5;
  border:none;
  -moz-border:none;
  -webkit-border:none;
}



#logo{
  width:2%;
  z-index: 1;
  margin-right:1px;
}

#logo:hover{
  width:21px;
}


</style>

