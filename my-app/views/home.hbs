<style>

html{
  height:100%;
}

body{ 
  scroll-behavior: unset;
  height:100%;

}

#video {
  position: fixed;
  z-index: 0;
  top:18%;
  right: 0;
  bottom: 0;
  min-width: 100%;
  min-height:100%;

}

.content {
  z-index: 1;
  position: fixed;
  top:1%;
  width: 100%;
  padding-left: 20px;
  font-size:larger;
  color: white;
}

.logoutLink{
  position: fixed;
  top:10px;
  right:20px;
  z-index: 1;
  color:white;
}

.logoutLink:hover{
  color:white;
  font-weight:bolder;
}

.addInputBox{
  position:fixed;
  z-index: 2;
  top:10%;
  left:20px;
  max-width:200px;
  max-height:10px;
  font-family:'Helvetica Neue';
}

.addButton{
  position:fixed;
  z-index: 2;
  top:12%;
  left:240px;
  border-radius:5px;
  border-style:unset;
  background-color: white;
}

.removeBoxes{
  position:fixed;
  z-index: 2;
  top:12%;
  left:280px;
  border-radius:5px;
  border-style:unset;
}

.removeButton{
  visibility: hidden;
  z-index: 2;
  position:fixed;
  top:20%;
  left:100px;
  border-radius:5px;
  border-style:unset;
}

.closeButton{
  visibility: hidden;
  position:fixed;
  z-index: 2;
  top:20%;
  left:200px;
  border-radius:5px;
  border-style:unset;

}

.playlist{
  position:absolute;
  z-index: 1;
  height:100%;
  padding-top:40%;
  margin-bottom:50%;
  left: 50%;
  margin-right:-50%;
  transform: translate(-50%, -50%);
}

.addVideo{
  background-color:black;
  color:grey;
  font-family:Geneva;
  opacity: 0.8; 
}
#font{
  opacity: 1;
  color:black;
  background-color: white;
}

.deletionIndicator{
  visibility: hidden;
  margin-left:-1.5%;
  z-index: 3;

}


#navbar{
  overflow: hidden;
  background-color: black;
  position: fixed; /* Set the navbar to fixed position */
  top: 0; /* Position the navbar at the top of the page */
  height: 15%;
  width: 100%; /* Full width */
  /*background: linear-gradient(black,transparent);*/
  background-size:cover;
  z-index: 2;

}

#centre{
  overflow: hidden;
  background-color: black;
  position: fixed;
  top: 15%; /* Position the navbar at the top of the page */
  height: 10%;
  width: 100%; /* Full width */
  background: linear-gradient(black,transparent);
  background-size:cover;
  z-index: 2;
}

.video{
  /*margin-bottom:20%;*/
  padding-bottom:30%;
}
